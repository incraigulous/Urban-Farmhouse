<header class="page-header">
  <h1>{{ page.title }}</h1>
</header>

{% include 'breadcrumbs' %}

<div class="contact">
    <div class="row">
        <div class="col-sm-6">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-12 bottom-dotted">
                            <article>
                                <h3>Connect with us</h3>
                                <p>We'd love to keep in touch! Sign up to receive email updates.</p>
                                {% include 'list-subscribe' %}
                            </article>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 bottom-dotted">
                            <article>
                                <a href="/pages/call-back-request">
                                    <div class="well call-back" >
                                        <i class="fa fa-phone"></i> Request a call back
                                    </div>
                                </a>
                            </article>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <article>
                                {{ page.content }}
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 left-dotted">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <article class="text-center">
                        <h3>Locations</h3>
                        {% include 'locations' %}
                    </article>

                </div>
            </div>
        </div>
    </div>
</div>
