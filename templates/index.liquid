{% assign page = pages.frontpage %}
{% layout 'home' %}

<div class="container">
    <!-- Slideshow, if we'd like it within the content container. -->
    {% if settings.slideshow_position == "content" %}
        {% include 'slideshow' %}
    {% endif %}

    <div class="row">
        <div class="col-md-12">
            {% include 'home-collections'%}
        </div>
    </div>
</div>


<div class="well well-lg">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h2>Media</h2>
                {% assign blog = 'news' %}
                {% include 'gallery-thumbnail' with blog %}
            </div>

            <div class="col-md-4">
                <h2>Materials</h2>
                {% assign blog = 'news' %}
                {% include 'home-gallery-thumbnail' with blog %}
            </div>

            <div class="col-md-4">
                <h2>Featured Designers</h2>
                {% assign blog = 'news' %}
                {% include 'home-gallery-thumbnail' with blog %}
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            {% include 'home-customer-stories' %}
        </div>

        <div class="col-md-4">
            {% include 'home-news' %}
        </div>

        <div class="col-md-4">
            {% include 'home-list-subscribe' %}
        </div>
    </div>
</div>