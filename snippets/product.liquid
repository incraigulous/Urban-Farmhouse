{% comment %}

  This snippet renders a product into a product list.
  By default, it's only used by the product-list.liquid snippet.

{% endcomment %}
<a href="{{ product.url | within: collection }}" title="{{ product.title }}" class="block">
    {% if product.featured_image.size > 0 %}
        <img src="{{ product.images.first | product_img_url: 'large' }}" alt="{{ product.title }}" class="img-responsive" width="100%"/>
    {% else  %}
        <div class="placeholder large">
            <img src="{{ product.images.first | product_img_url: 'large' }}" alt="{{ product.title }}" class="img-responsive" width="100%" style="visibility: hidden"/>
        </div>
    {% endif %}
</a>

<h5>
  <a href="{{ product.url | within: collection }}" title="{{ product.title }}">{{ product.title }}</a>
  {% if product.compare_at_price_max > product.price and settings.product_show_sale_tag %}
    <span class="label label-success">SALE</span>
  {% endif %}
</h5>

<p class="lead">
    {% if product.price_varies %}
        <small>Base Price:</small>
    {% endif %}
    ${{ product.price | money_without_currency }}
    <hr />
</p>