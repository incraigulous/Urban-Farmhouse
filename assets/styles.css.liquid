/* BASE */
html,
body {
    background: #f5f4f0 url({{ 'background.png' | asset_url }}) bottom repeat-x;
    color: #5d5a4b;
}

nav,
.navbar-default,
footer.footer {
    background-color: transparent;
}

article {
    margin-top: 30px;
    margin-bottom: 30px;
}

.container {
    width: 960px;
    position: relative;
}

.container-absolute {
    position: absolute;
    width: 960px;
    left: 50%;
    transform: translate(-50%,0);
    -webkit-transform: translate(-50%,0);
    -ms-transform: translate(-50%,0);
    top: 0px;
}

.preloader {
    width: 100%;
    height: 100%;
    background: url({{ 'spinner.gif' | asset_url }}) no-repeat center center;
}

.well-lg {
    border-radius: 0;
    padding: 48px 24px;
}
.well {
    background-color: #353535;
    border: 0px;
    border-radius: 0px;
    -webkit-box-shadow: none;
    box-shadow: none;
    color: white;
}

/* OVERRIDES */
.row.half-gutter {
    margin-right: -7.5px;
    margin-left: -7.5px;
}

.row.half-gutter .col {
    padding-left: 7.5px;
    padding-right: 7.5px;
}

/* BUTTONS */
.btn {
    text-transform: uppercase;
    padding: 15px 35px;
    transition: all 0.3s ease;
}

a {
    transition: all 0.1s ease-in-out 0s;
}

.btn-default,
.btn-default:hover,
a.btn-default,
a:link.btn-default,
a:hover.btn-default,
a:active.btn-default,
a:visited.btn-default {
    color: white;
    background-color: #353535;
}

.btn-default:hover,
.btn-default:active,
a:hover.btn-default,
a:active.btn-default {
    background-color: #484848;
}

.center-underlined {
    text-align: center;
    border-bottom: solid 1px #dbdbda;
    padding-bottom: 15px;
    margin-bottom: 30px;
}

/* FONTS */

html .fa {
    font-size: 1.3em;
    margin: 0 4px;
}

a,
a:link,
a:hover,
a:active,
a:visited {
    color: #353535;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

h1, h2, h3, h5 {
    text-transform: uppercase;
}

h4 .fa {
    margin-right: 10px;
}

/* FORMS */
.form-control {
    padding: 6px 12px;
}

input[type="search"] {
    box-sizing: border-box;
    background: url('icon-search.png') no-repeat 8px center;
    background-size: 14px;
    padding: 6px 12px 6px 30px;
}

input[type="search"]::-webkit-search-cancel-button {
    -webkit-appearance: searchfield-cancel-button;
}

/* ALERTS */

.flash.alert {
    margin-bottom: 0px;
    border-radius: 0px;
    text-align: center;
    text-transform: uppercase;
    font-size: 1.1em;
    padding: 5px;
}

.flash.alert-info {
    color: white;
    background-color: #353535;
    border: 0px;
}

