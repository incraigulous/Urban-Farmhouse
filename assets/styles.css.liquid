    }
}

.navbar-brand>a {
    margin: 0 auto;
    display: block;
    width: 301px;
}

.navbar-brand>img {
    margin: 0 auto;
}

.nav.main-nav > li {
    padding-left: 0px;
    padding-right: 0px;
    margin-right: 17px;
    margin-left: 17px;
}

.main-nav {
    margin-top: 65px;
    width: 100%;
}

.main-nav li {
    float: none;
    display: inline-block;
}

.navbar {
    margin-bottom: 0px;
}

.navbar-right {
    position: absolute;
    top: 0;
    right: 22px;
}
.navbar-default .main-nav.navbar-nav {
    margin-bottom: 3px;
}

.navbar-default .navbar-right .navbar-nav {
    padding: 0px;
}

.navbar-right li  {
    padding-top: 0px;
    padding-bottom: 0px;
}

.navbar-right li.cart-link  {
    border-bottom: solid 1px #dbdbda;
    margin-bottom: 8px;
    padding-left: 0px;
    padding-top: 0px;
}

.navbar-right li.cart-link a {
    padding: 15px 0px 10px 0px;
}

.navbar-right .fa-shopping-cart {
    margin-right: 11px;
    position: relative;
    top: 5px;
}

.navbar-right .fa  {
    font-size: 1.6em;
}

.navbar-nav {
    width: 100%;
    text-align: center;
    text-transform: uppercase;
}

.navbar-default .navbar-nav {
    margin-bottom: 7px;
    padding: 5px;
}

.navbar-default .main-nav.navbar-nav > li > a {
    background-color: transparent;
}

.navbar-default .main-nav.navbar-nav > li > a:hover {
    background-color: transparent;
}

.navbar-default .main-nav.navbar-nav > li > a:before {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #353535;
    visibility: hidden;
}

.navbar-default .main-nav.navbar-nav > li.active > a:before,
.navbar-default .main-nav.navbar-nav > li.open > a:before,
.navbar-default .main-nav.navbar-nav > li > a:hover:before,
.navbar-default .main-nav.navbar-nav > .active > a:focus:before {
    visibility: visible;
    -webkit-transform: scaleX(1);
    transform: scaleX(1);
}

.navbar-default .main-nav.navbar-nav > .open > a,
.navbar-default .main-nav.navbar-nav > .open > a:hover,
.navbar-default .main-nav.navbar-nav > .open > a:focus {
    background-color: transparent;
}

.nav > li {
    padding-left: 10px;
    padding-right: 10px;
}

.nav > li > a {
     padding: 10px 5px;
 }

nav input[type="search"] {
    margin-top: 15px;
    font-style: italic;
}

.dropdown-menu {
    position: absolute;
    top: 48px;
    left: -35px;
    z-index: 1000;
    display: none;
    float: left;
    min-width: 160px;
    margin: 2px 0 0;
    font-size: 14px;
    text-align: left;
    list-style: none;
    background-color: rgba(53, 53, 53, .9);
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, .15);
    -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
    box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
    width: 100%;
    padding-top: 5px;
    padding-bottom: 5px;
}

.dropdown-menu li {
    width: 100%;
    display: block;
    text-align: center;
    padding: 8px 0;
}

.dropdown-menu a {
    padding: 0 40px;
    display: block;
    width: 100%;
}

.dropdown-menu a,
.dropdown-menu a:visited,
.dropdown-menu a:hover,
.dropdown-menu a:active {
    background-color: transparent !important;
    color: white !important;
}

.dropdown-menu a,
.dropdown-menu a:hover,
.dropdown-menu a:visited,
.dropdown-menu a:active {
    color: white;
    font-weight: bold;
}

/* SLIDESHOW */
.slider {
    display: none;
    overflow: hidden;
}

.slick-slider > div {
    max-height: 450px !important;
}

.slider .slide {
    position: relative;
    background-size: cover !important;
}

.slider .slick-track,
.slider .slick-slide {
    max-height: 450px !important;
}

.slide:before {
    content: "";
    display: block;
    padding: 25%;
    box-sizing: border-box;
    max-height: 1119px;
}

@media (min-width: 1200px) {
    .slider .slide {
        position: relative;
        background-position: top;
    }
}

#slider-preloader {
    margin-bottom: 30px;
}

#slider-preloader img {
    height: 551px;
}

.slider .caption {
    width: 300px;
    background-color: rgba(245, 244, 240, .9);
    padding: 30px;
    float: right;
    margin: 40px 75px;
}

.slider .caption h4 {
    font-size: 2em;
}

.slider .caption .description {
    margin: 22px 0 32px
}

.slider ul.slick-dots {
    bottom: 25px;
}

.slider ul.slick-dots li button {

    text-indent: -9999px;
    border-radius: 5px;
    border: solid 2px #cecbcc;
    transition: all 0.3s ease-out;
}

.slider ul.slick-dots li:hover button,
.slider ul.slick-dots li.slick-active button {
    background-color: #b2b1b2;
}

.slider .slick-next,
.slider .slick-prev {
    height: 30px;
    bottom: 30px;
    top: auto;
    z-index: 200;


}

.slider .slick-prev {
    left: 30px;
}

.slider .slick-next {
    right: 30px;
}

.slider .slick-prev:before  {
    font-family: 'FontAwesome';
    content: "\f053";
    font-size: 30px;
}

.slider .slick-next:before {
     font-family: 'FontAwesome';
     content: "\f054";
    font-size: 30px;
 }

/* COLLECTIONS */
.collections {
    margin-bottom: 20px;
}

.collection {
    position: relative;
    cursor: pointer;
    height: 195px;
}

.collection > div {
    overflow: hidden;
}

.collection h5 {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%,-50%);
    -ms-transform: translate(-50%,-50%);
    color: white;
    text-transform: uppercase;
    font-size: 1.5em;
    text-align: center;
    font-weight: normal;
    display: block;
    width: 205px;
    padding: 15px;
    border: solid 2px white;
    margin: 0px;
    -webkit-transition: all 0.3s ease-out;
    transition: all 0.3s ease-out;
    cursor: pointer;
    box-sizing: border-box;
    -moz-box-sizing:border-box;
    -webkit-box-sizing:border-box;
}

.collection:hover h5 {
    color: #353535;
    border: solid 2px #353535;
    font-size: 1.6em;
}

.collection img {
    -webkit-transform: scale(1);
    transform: scale(1);
    opacity:1;
    -webkit-transition:-webkit-transform .3s ease-in, opacity .3s ease-out;
    transition:transform .3s linear, opacity .3s ease-out;
    -webkit-backface-visibility: hidden;
}

.collection:hover img {
    -webkit-transform: scale(1.6);
    transform: scale(1.6);
    -webkit-transition:-webkit-transform 4s ease-in, opacity .3s ease-out;
    transition:transform 4s linear, opacity .3s ease-out;
    opacity: 0.3;
}

