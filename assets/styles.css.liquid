/* BASE */
html,
body {
    background: #f5f4f0 url({{ 'background.png' | asset_url }}) bottom repeat-x;
}

nav,
.navbar-default,
footer.footer {
    background-color: transparent;
}

.container {
    width: 960px;
    position: relative;
}

.container-absolute {
    position: absolute;
    width: 960px;
    left: 50%;
    transform: translate(-50%,0);
    -webkit-transform: translate(-50%,0);
    -ms-transform: translate(-50%,0);
    top: 0px;
}

.preloader {
    width: 100%;
    height: 100%;
    background: url({{ 'spinner.gif' | asset_url }}) no-repeat center center;
}

/* BUTTONS */
.btn {
    text-transform: uppercase;
    padding: 15px 35px;
}

.btn-default,
.btn-default:hover,
a.btn-default,
a:link.btn-default,
a:hover.btn-default,
a:active.btn-default,
a:visited.btn-default {
    color: white;
    background-color: #353535;
}

.btn-default:hover,
.btn-default:active,
a:hover.btn-default,
a:active.btn-default {
    background-color: #4F4F4F;
}


/* FONTS */

html .fa {
    font-size: 1.3em;
    margin: 0 4px;
}

a,
a:link,
a:hover,
a:active,
a:visited {
    color: #353535;
    text-decoration: none;
}

a:hover {
    text-decoration: underline;
}

/* FORMS */
.form-control {
    padding: 6px 12px;
}

input[type="search"] {
    box-sizing: border-box;
    background: url('icon-search.png') no-repeat 8px center;
    background-size: 14px;
    padding: 6px 12px 6px 30px;
}

input[type="search"]::-webkit-search-cancel-button {
    -webkit-appearance: searchfield-cancel-button;
}

/* ALERTS */

.flash.alert {
    margin-bottom: 0px;
    border-radius: 0px;
    text-align: center;
    text-transform: uppercase;
    font-size: 1.1em;
    padding: 5px;
}

.flash.alert-info {
    color: white;
    background-color: #353535;
    border: 0px;
}

/* NAVBAR */
.navbar-brand {
    position: absolute;
    width: 100%;
    left: 0;
    text-align: center;
    margin: 30px auto 0 auto;
}

@media (min-width: 768px) {
    .navbar > .container .navbar-brand,
    .navbar > .container-fluid .navbar-brand {
        margin-left: 0px;
    }
}

.navbar-brand>a {
    margin: 0 auto;
    display: block;
    width: 301px;
}

.navbar-brand>img {
    margin: 0 auto;
}

.nav.main-nav > li {
    padding-left: 0px;
    padding-right: 0px;
    margin-right: 17px;
    margin-left: 17px;
}

.main-nav {
    margin-top: 65px;
    width: 100%;
}

.main-nav li {
    float: none;
    display: inline-block;
}

.navbar {
    margin-bottom: 0px;
}

.navbar-right {
    position: absolute;
    top: 0;
    right: 22px;
}
.navbar-default .main-nav.navbar-nav {
    margin-bottom: 3px;
}

.navbar-default .navbar-right .navbar-nav {
    padding: 0px;
}

.navbar-right li  {
    padding-top: 0px;
    padding-bottom: 0px;
}

.navbar-right li.cart-link  {
    border-bottom: solid 1px #dbdbda;
    margin-bottom: 8px;
    padding-left: 0px;
    padding-top: 0px;
}

.navbar-right li.cart-link a {
    padding: 15px 0px 10px 0px;
}

.navbar-right .fa-shopping-cart {
    margin-right: 11px;
    position: relative;
    top: 5px;
}

.navbar-right .fa  {
    font-size: 1.6em;
}

.navbar-nav {
    width: 100%;
    text-align: center;
    text-transform: uppercase;
}

.navbar-default .navbar-nav {
    margin-bottom: 7px;
    padding: 5px;
}

.navbar-default .main-nav.navbar-nav > li.open > a,
.navbar-default .main-nav.navbar-nav > li > a:hover {
    border-bottom: solid 2px #353535;
}

.navbar-default .main-nav.navbar-nav > .active > a,
.navbar-default .main-nav.navbar-nav > .active > a:hover,
.navbar-default .main-nav.navbar-nav > .active > a:focus {
    background-color: transparent;
    border-bottom: solid 2px #353535;
}

.navbar-default .main-nav.navbar-nav > .open > a,
.navbar-default .main-nav.navbar-nav > .open > a:hover,
.navbar-default .main-nav.navbar-nav > .open > a:focus {
    background-color: transparent;
}

.nav > li {
    padding-left: 10px;
    padding-right: 10px;
}

.nav > li > a {
     padding: 10px 5px;
 }

nav input[type="search"] {
    margin-top: 15px;
    font-style: italic;
}

.dropdown-menu {
    position: absolute;
    top: 50px;
    left: -35px;
    z-index: 1000;
    display: none;
    float: left;
    min-width: 160px;
    margin: 2px 0 0;
    font-size: 14px;
    text-align: left;
    list-style: none;
    background-color: rgba(53, 53, 53, .9);
    -webkit-background-clip: padding-box;
    background-clip: padding-box;
    border: 1px solid #ccc;
    border: 1px solid rgba(0, 0, 0, .15);
    -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
    box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
    width: 100%;
    padding-top: 5px;
    padding-bottom: 5px;
}

.dropdown-menu li {
    width: 100%;
    display: block;
    text-align: center;
    padding: 8px 0;
}

.dropdown-menu a {
    padding: 0 40px;
    display: block;
    width: 100%;
}

.dropdown-menu a,
.dropdown-menu a:visited,
.dropdown-menu a:hover,
.dropdown-menu a:active {
    background-color: transparent !important;
    color: white !important;
}

.dropdown-menu a,
.dropdown-menu a:hover,
.dropdown-menu a:visited,
.dropdown-menu a:active {
    color: white;
    font-weight: bold;
}

/* SLIDESHOW */
.slider {
    display: none;
    overflow: hidden;
}

.slider .slide {
    position: relative;
    background-size: auto 100% !important;
}

@media (min-width: 1200px) {
    .slider .slide {
        background-size: 100% auto !important;
    }
}

.slider .caption {
    width: 300px;
    background-color: rgba(245, 244, 240, .9);
    padding: 30px;
    float: right;
    margin: 40px 75px;
}

.slider .caption h4 {
    font-size: 2em;
}

.slider .caption .description {
    margin: 22px 0 32px
}

.slider ul.slick-dots {
    bottom: 25px;
}

.slider ul.slick-dots li button {

    text-indent: -9999px;
    border-radius: 5px;
    border: solid 2px #cecbcc;
}

.slider ul.slick-dots li:hover button,
.slider ul.slick-dots li.slick-active button {
    background-color: #b2b1b2;
}

.slider .slick-next,
.slider .slick-prev {
    height: 30px;
    bottom: 30px;
    top: auto;
    z-index: 200;
}

.slider .slick-prev {
    left: 15px;
}

.slider .slick-next {
    right: 15px;
}

.slider .slick-prev:before  {
    font-family: 'FontAwesome';
    content: "\f053";
    font-size: 30px;
}

.slider .slick-next:before {
     font-family: 'FontAwesome';
     content: "\f054";
    font-size: 30px;
 }

.blog-view .wrapper {
    position:relative;
    margin:0 auto;
    overflow:hidden;
    padding:5px;
    height:50px;
}