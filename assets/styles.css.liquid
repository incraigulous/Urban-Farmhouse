    }

}

/** MOBILE **/

@media (max-width: 767px) {
    /** BASE **/
    .col-sm-12.mobile-ignore {
        margin-left: 0px;
        margin-right: 0px;
        padding-left: 0px;
        padding-right: 0px;
    }

    .mobile-container {
        max-width: 320px;
        margin: 0 auto;
    }

    /** MOBILE NAVIGATION **/
    .dropdown-menu {
        display: none !important;
    }

    .navbar {
        margin-bottom: 0px;
    }

    .navbar-brand {
        z-index: -1;
    }

    .navbar-header {
        min-height: 60px;
    }

    .navbar-brand img {
        width: 160px;
    }

    .navbar-collapse {
        background-color: #353535;
        text-align: center;
        text-transform: uppercase;
    }

    .navbar-default .navbar-nav > .active > a, .navbar-default .navbar-nav > .active > a:hover, .navbar-default .navbar-nav > .active > a:focus {
        color: #F5F4F0;
        background-color: #444444;
    }

    .navbar-default .navbar-nav > li > a {
        color: #F5F4F0;
    }

    .navbar-default .main-nav.navbar-nav > .open > a,
    .navbar-default .main-nav.navbar-nav > .open > a:hover,
    .navbar-default .main-nav.navbar-nav > .open > a:focus {
        background-color: #444444;
        color: #F5F4F0;
    }

    .navbar-default .navbar-nav > li > a:hover, .navbar-default .navbar-nav > li > a:focus {
        background-color: #444444;
        color: #F5F4F0;
    }

    .navbar-toggle {
        margin-top: 11px;
    }

    .navbar-nav {
        margin: 0 -15px;
    }

    .navbar-right ul.list-inline {
        display: none;
    }

    .navbar-static-top {
        border-width: 0;
    }

    /** MOBILE SLIDER **/

    .slider .caption {
        display: none !important
    }

    .slick-slider {
        margin-bottom: 0px;
    }

    .slider ul.slick-dots {
        bottom: 10px;
    }

    .slider .slick-next, .slider .slick-prev {
        bottom: 15px;
    }

    /** MOBILE COLLECTIONS **/
    .collection {
        box-sizing: border-box;
        overflow: hidden;
        margin-bottom: 15px;
    }

    .collections {
        margin-bottom: 0px;
        max-width: 320px;
    }

    /** MOBILE GALLERY **/
    .home-gallery-thumbnail {
        overflow: hidden;
        margin-bottom: 15px;
    }

    /** MOBILE CUSTOMERS **/
    .customers .customer {
        margin-bottom: 25px;
    }

    .footer-nav .footer-links li {
        display: block;
        width: auto;
        text-align: center;
        padding-left: 0px;
        padding-right: 0px;
        font-size: .9em;
    }
}
